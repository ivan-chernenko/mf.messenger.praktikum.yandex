{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es5",
            "es2015.promise",
            "dom",
            "es2015"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "declaration": false,
        "module": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "downlevelIteration": true,
        "outDir": "static"
    },
    "include": [
        "src/**/*"
    ]
}